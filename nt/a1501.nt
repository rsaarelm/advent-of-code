module a1501;

macro import std.macro.listcomprehension;

import std.stdio;

int delta(char c) {
    // XXX Proper char literals aren't there yet...
    return    1 if c == "("[0]
        else -1 if c == ")"[0]
        else  0;
}

void main(string[] args) {
    auto input = stdin.byLine.front;

    // Part 1
    [sum delta(c) for c in input].(print("$that"));

    // Part 2
    mut int floor = 0;
    for (i, c in input) {
        floor += delta(c);
        if (floor < 0) {
            print("$(i + 1)");
            break;
        }
    }
}
